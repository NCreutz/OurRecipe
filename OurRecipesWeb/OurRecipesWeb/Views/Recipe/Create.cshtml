@model OurRecipesWeb.Models.Recipe

@{
    ViewData["Title"] = "Create Recipe";
}




<h1>Create</h1>

<h4>Recipe</h4>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-sm">
            <label asp-for="Title" class="control-label">Titel</label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <label asp-for="Description" class="control-label">Beskrivelse</label>
            <textarea asp-for="Description" class="form-control" rows="15" cols="50"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <label asp-for="Ingredients" class="control-label">Ingredienser</label>
            <textarea asp-for="Ingredients" class="form-control" rows="15" cols="50"></textarea>
            <span asp-validation-for="Ingredients" class="text-danger"></span>
        </div>
        <div class="col-sm">
            <label asp-for="CourseOfAction" class="control-label">Fremgangsmåde</label>
            <textarea asp-for="CourseOfAction" class="form-control" rows="15" cols="50"></textarea>
            <span asp-validation-for="CourseOfAction" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-sm">
            <label asp-for="Reference" class="control-label">Inspiration</label>
            <input asp-for="Reference" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>

    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
